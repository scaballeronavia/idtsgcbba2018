{#
/**
 * @file
 * Adaptivetheme implementation to display 4x4 grid Layout Plugin layout.
 *
 * Available variables:
 * - content: all output
 * - attributes: layout attributes
#}
<{{ html_element }}{{ attributes.addClass('clearfix') }}>
  {# Row 1 #}
  {% if content.r1c1 %}
    <div class="atl__lc lc-r1c1">
      {{ content.r1c1 }}
    </div>
  {% endif %}

